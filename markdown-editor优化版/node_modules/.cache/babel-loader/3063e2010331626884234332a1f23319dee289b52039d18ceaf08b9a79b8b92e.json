n      }\n      var result = formatHelpers[type](content, selection);\n      this.setMarkdownContent(result.content);\n      this.$refs.editor.focus();\n      this.updatePreview();\n    },\n    getSelectionRange: function getSelectionRange() {\n      var selection = window.getSelection();\n      if (!selection.rangeCount) return {\n        start: 0,\n        end: 0,\n        text: ''\n      };\n      var editor = this.$refs.editor;\n      var range = selection.getRangeAt(0).cloneRange();\n      range.selectNodeContents(editor);\n      var start = range.toString().length;\n      range.setEnd(selection.anchorNode, selection.anchorOffset);\n      var startPos = range.toString().length;\n      range.setStart(selection.focusNode, selection.focusOffset);\n      var endPos = range.toString().length;\n      return {\n        start: Math.min(startPos, endPos),\n        end: Math.max(startPos, endPos),\n        text: selection.toString()\n      };\n    },\n    getMarkdownContent: function getMarkdownContent() {\n      var nodes = Array.from(this.$refs.editor.childNodes);\n      return nodes.map(function (node) {\n        if (node.tagName === 'IMG') {\n          return \"![\\u56FE\\u7247](\".concat(node.src, \")\");\n        }\n        return node.textContent || node.outerHTML;\n      }).join('');\n    },\n    setMarkdownContent: function setMarkdownContent(content) {\n      this.$refs.editor.innerHTML = '';\n      this.$refs.editor.textContent = content;\n      this.updatePreview();\n    },\n    handleImageSelect: function handleImageSelect() {\n      this.$refs.imageInput.click();\n    },\n    handleImageUpload: function handleImageUpload(event) {\n      var _this = this;\n      var file = event.target.files[0];\n      if (!file) return;\n      var reader = new FileReader();\n      reader.onload = function (e) {\n        var base64 = e.target.result;\n        var selection = _this.getSelectionRange();\n        var content = _this.getMarkdownContent();\n        var result = f